<h3 id="add-collaborators">Add Collaborators</h3>
<%= form_for [wiki, Collaborator.new] do |f| %>
  <div class="form-group">
    <%= f.label :user %>
    <%= f.text_field :user, class: 'form-control', placeholder: "Email Address" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
