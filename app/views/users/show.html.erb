<h1>Profile for <%= current_user.email %></h1>

<div class="row">
  <div class="col-md-4">
    <p>Current role:   <%= current_user.role %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn btn-success' %>
    <% if current_user.role == "standard" %>
      <%= link_to "Upgrade to Premium", edit_user_registration_path, class: 'btn btn-success' %>
    <% elsif current_user.role == "premium" %>
      <%= link_to "Downgrade to Standard", edit_user_registration_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
